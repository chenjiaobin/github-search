<view class="container">
  <view class="gh-head">
    <view>
      <scroll-view scroll-x class="gh-tab">
        <view 
          style="pointer-events: auto;" 
          class="gh-tab-item {{index == tabCur ? 'gh-green gh-bold gh-boder-bottom gh-text-large':''}}"
          wx:for="{{tabItems}}" 
          wx:key="index" 
          wx:for-item="item" 
          bindtap="tabSelect" 
          data-id="{{index}}">
          {{item}}
        </view>
      </scroll-view>
    </view>
    <swiper class="gh-swiper-box" current="{{tabCur}}" :duration="300" bindchange="changeTab">
      <swiper-item>
        <repo-all></repo-all>
      </swiper-item>
      <swiper-item>
        第二个tab
      </swiper-item>
    </swiper>

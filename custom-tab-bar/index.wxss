/* 引入iconfont字体文件 */
@import "../assets/font/font.wxss";
/* 引入基础样式文件 */
@import "../assets/css/main.wxss";

.gh-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  border-top: 2rpx solid #eaecef;
  padding: 10rpx 0;
  height: 84rpx;
}
.gh-bar__item {
  flex: 1;
  text-align: center;
}
.gh-bar__avatar-out {
  position: relative;
}
.gh-bar__avatar-inner {
  position: absolute;
  top: -100rpx;
  left: 50%;
  margin-left: -48rpx;
  font-size: 100rpx;
  width: 96rpx;
  height: 104rpx;
  background: #ffffff;
  border-radius: 50%;
  animation:circleRoate 5s ;
	animation-timing-function:linear;
  animation-iteration-count: infinite;
}
@keyframes circleRoate{
  from{
    transform: rotate(0deg) infinite;
  }
  to{
    transform: rotate(360deg);
  }
}